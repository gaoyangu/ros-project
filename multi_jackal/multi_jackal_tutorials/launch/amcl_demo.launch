<?xml version="1.0"?>

<!-- map_server and amcl -->

<launch>

  <arg name="ns0"        default="jackal0"/>
  <arg name="ns1"        default="jackal1"/>
  <arg name="ns2"        default="jackal2"/>
  <arg name="ns3"        default="jackal3"/>
  <arg name="ns4"        default="jackal4"/>
  <arg name="ns5"        default="jackal5"/>

  <!-- Run the map server -->
  <arg name="map_file" default="$(find multi_jackal_tutorials)/maps/work_layout_v2.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!--- Run AMCL -->
  <include file="$(find multi_jackal_tutorials)/launch/amcl.launch">
    <arg name="ns" value="$(arg ns0)"/>
    <arg name="use_map_topic"   value="true" />
    <arg name="scan_topic"      value="/$(arg ns0)/front/scan" />
    <arg name="initial_pose_x" default="-2.5" />
    <arg name="initial_pose_y" default="0.0" />
    <arg name="initial_pose_a"  value="1.57" />
  </include>

  <include file="$(find multi_jackal_tutorials)/launch/amcl.launch">
    <arg name="ns" value="$(arg ns1)"/>
    <arg name="use_map_topic"   value="true" />
    <arg name="scan_topic"      value="/$(arg ns1)/front/scan" />
    <arg name="initial_pose_x" default="0" />
    <arg name="initial_pose_y" default="0" />
    <arg name="initial_pose_a"  value="1.57" />
  </include>

  <include file="$(find multi_jackal_tutorials)/launch/amcl.launch">
    <arg name="ns" value="$(arg ns2)"/>
    <arg name="use_map_topic"   value="true" />
    <arg name="scan_topic"      value="/$(arg ns2)/front/scan" />
    <arg name="initial_pose_x" default="3" />
    <arg name="initial_pose_y" default="0" />
    <arg name="initial_pose_a"  value="1.57" />
  </include>

  <!--- Run AMCL -->
  <include file="$(find multi_jackal_tutorials)/launch/amcl.launch">
    <arg name="ns" value="$(arg ns3)"/>
    <arg name="use_map_topic"   value="true" />
    <arg name="scan_topic"      value="/$(arg ns3)/front/scan" />
    <arg name="initial_pose_x" default="8.0" />
    <arg name="initial_pose_y" default="0.0" />
    <arg name="initial_pose_a"  value="1.57" />
  </include>

  <include file="$(find multi_jackal_tutorials)/launch/amcl.launch">
    <arg name="ns" value="$(arg ns4)"/>
    <arg name="use_map_topic"   value="true" />
    <arg name="scan_topic"      value="/$(arg ns4)/front/scan" />
    <arg name="initial_pose_x" default="10.5" />
    <arg name="initial_pose_y" default="0" />
    <arg name="initial_pose_a"  value="1.57" />
  </include>

  <include file="$(find multi_jackal_tutorials)/launch/amcl.launch">
    <arg name="ns" value="$(arg ns5)"/>
    <arg name="use_map_topic"   value="true" />
    <arg name="scan_topic"      value="/$(arg ns5)/front/scan" />
    <arg name="initial_pose_x" default="13.5" />
    <arg name="initial_pose_y" default="0.0" />
    <arg name="initial_pose_a"  value="1.57" />
  </include>

</launch>
